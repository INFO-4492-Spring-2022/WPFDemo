        <TextBlock x:Name="tbOutput" HorizontalAlignment="Left" Margin="168,195,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="-0.02,0.292"/>
        <Label x:Name="lblName" Content="What is your name?" HorizontalAlignment="Left" Margin="71,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="186,55,0,0" TextWrapping="Wrap" Text="Enter Your Name" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="chkHasCookie" Content="Has cookie" HorizontalAlignment="Left" Margin="319,55,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkTrue" Content="True" HorizontalAlignment="Left" Margin="510,132,0,0" VerticalAlignment="Top"   IsChecked="True" />
        <CheckBox x:Name="chkFalse" Content="False" HorizontalAlignment="Left" Margin="510,152,0,0" VerticalAlignment="Top" IsChecked="False" />
        <CheckBox x:Name="chkNull" Content="Null" HorizontalAlignment="Left" Margin="510,172,0,0" VerticalAlignment="Top"   IsChecked="{x:Null}" />
        <CheckBox x:Name="chkHasCookie_0" Content="Has cookie" HorizontalAlignment="Left" Margin="465,3,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkHasCookie_1" Content="Has cookie" HorizontalAlignment="Left" Margin="466,24,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkHasCookie_2" Content="Has cookie" HorizontalAlignment="Left" Margin="563,6,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkHasCookie_3" Content="Has cookie" HorizontalAlignment="Left" Margin="564,27,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkHasCookie_4" Content="Has cookie" HorizontalAlignment="Left" Margin="656,9,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkHasCookie_5" Content="Has cookie" HorizontalAlignment="Left" Margin="657,30,0,0" VerticalAlignment="Top"/>
