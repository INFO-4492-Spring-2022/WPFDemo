        <CheckBox x:Name="chkHasCookie_11" Content="Has cookie" HorizontalAlignment="Left" Margin="657,72,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnHighLightCheck" Content="Color stuff" HorizontalAlignment="Left" Margin="535,251,0,0" VerticalAlignment="Top" Width="75" Click="btnHighLightCheck_Click" />
        <TextBox x:Name="txtCheckNumber" HorizontalAlignment="Left" Height="23" Margin="410,248,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnReadText" Content="Read it" HorizontalAlignment="Left" Margin="71,256,0,0" VerticalAlignment="Top" Width="75" Click="btnReadText_Click"/>


    </Grid>
</Window>
