        <CheckBox x:Name="chkHasCookie_7" Content="Has cookie" HorizontalAlignment="Left" Margin="466,66,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkHasCookie_8" Content="Has cookie" HorizontalAlignment="Left" Margin="563,48,0,0" VerticalAlignment="Top"/>
