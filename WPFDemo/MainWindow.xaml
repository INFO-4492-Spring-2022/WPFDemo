<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="Our Application" Height="450" Width="800" Background="#FFFFFFFF">
    <Grid>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="222,77,0,0" VerticalAlignment="Top" Width="162" Background="#FFB30808" Height="100" Foreground="#FFFBF6F6" Click="btnStop_Click"/>
